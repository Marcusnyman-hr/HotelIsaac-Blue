@model IEnumerable<HotelIsaac.Models.Room>

@{
    ViewData["Title"] = "Cleaning";
}

<h1>Rooms that needs to be cleaned:</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Roomnum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastCleaned)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Roomnum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastCleaned)
            </td>
            <td>
              <a asp-action="Clean" asp-route-id="@item.Id" class="btn btn-primary">Done Cleaning</a>
            </td>
        </tr>
}
    </tbody>
</table>
