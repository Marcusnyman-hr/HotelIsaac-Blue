@model IEnumerable<HotelIsaac.Models.Review>

@{
    ViewData["Title"] = "Index";
}

<h1>Reviews: </h1>
<table class="table">
    <thead>
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.Customersid)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Rating)
        </th>
        @if (User.IsInRole("Administrator") || User.IsInRole("Reception-Staff"))
        {
          <th>
            @Html.DisplayNameFor(model => model.Customerreview)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Bookings)
          </th>
        }

        <th></th>
      </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Bookings.Customers.Firstname)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Customerreview)
        </td>
        @if (User.IsInRole("Administrator") || User.IsInRole("Reception-Staff"))
        {
          <td>
            @Html.DisplayFor(modelItem => item.Bookings.Id)
          </td>
          <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
          </td>
        }

      </tr>
}
    </tbody>
</table>
